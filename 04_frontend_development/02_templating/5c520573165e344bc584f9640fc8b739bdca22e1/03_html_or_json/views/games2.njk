{% extends "layout.njk" %}
{% block content %}

<div class="container">
    <div class="title">
    </br>
        <h1>Games</h1>
      </br>
    </div>
    <div class="row justify-content-md-center">
      {% for game in games %}
    <div class="col-md-auto">
          <div class="card" style="width: 18rem">
            <img src="{{game.cover}}">
           <a href="/games/{{game.slug}}">{{game.name}}</a>
          </div>
        </div>
    {% endfor %}
    </div>  
  </div>
{% endblock %}